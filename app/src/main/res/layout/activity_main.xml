<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connectText"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#FF0000"
            android:text="Disconnected" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/vid_editText"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Vendor ID"
                android:inputType="numberDecimal">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/pid_editText"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Product ID"
                android:inputType="numberDecimal">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/connect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect" />

            <Button
                android:id="@+id/disconnect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disconnect" />
        </LinearLayout>

        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input from USB" />

        <EditText
            android:id="@+id/output_editText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send" />

        <TextView
            android:id="@+id/machine_textView"
            android:layout_width="match_parent"
            android:layout_height="70dp" />
        <Button
            android:id="@+id/invoice_issue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="開立發票" />
        <TextView
            android:id="@+id/invoice_textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>
        <Button
            android:id="@+id/invoice_print_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列印發票" />
        <Button
            android:id="@+id/QR_code_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="列印QR" />
        <Button
            android:id="@+id/machine_status_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="印表機狀態" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>